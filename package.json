{
    "name": "tye",
    "productName": "Tell Your Enemies",
    "version": "1.0.0",
    "description": "An Electron application with Vue and TypeScript",
    "main": "./out/main/index.js",
    "author": "https://github.com/teenxsky/tye",
    "homepage": "https://github.com/teenxsky/tye",
    "type": "module",
    "build": {
        "files": [
            "./src/preload/index.ts",
            "./src/renderer/src/main.ts",
            "./out/**/*",
            "./src/**/*"
        ],
        "mac": {
            "target": "dmg",
            "icon": "./resources/icon.png"
        },
        "extraResources": [
            {
                "from": "./.env",
                "to": "./.env"
            }
        ]
    },
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "npm run clean && electron-vite dev",
        "build": "npm run clean && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "npm run build && electron-builder --linux",
        "clean": "rimraf out",
        "preview": "electron-vite preview",
        "release": "electron-builder -mwl"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "electron-updater": "^6.3.9",
        "express": "^4.21.1",
        "mongodb": "^6.11.0",
        "mongoose": "^8.8.3",
        "three": "^0.170.0",
        "vue": "^3.2.25"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.2",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@eslint/js": "^9.16.0",
        "@rushstack/eslint-patch": "^1.10.4",
        "@types/node": "^22.10.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "electron-vite": "^2.3.0",
        "eslint": "^8.56.0",
        "eslint-plugin-vue": "^9.32.0",
        "globals": "^15.13.0",
        "prettier": "^3.4.1",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.17.0",
        "vite": "^6.0.0",
        "vite-plugin-gltf": "^4.0.0",
        "vue": "^3.2.25",
        "vue-tsc": "^1.8.27"
    },
    "keywords": [],
    "license": "ISC"
}